# AI Job Hunt - Environment Configuration

# Ollama AI Configuration
# URL to your Ollama API instance
OLLAMA_API_URL=http://localhost:11434
# Model to use for resume optimization
GEMMA_MODEL=gemma:3.4b

# Database Configuration
# SQLite database path for storing application data
DATABASE_URL=sqlite:///data/job_applications.db

# Job Portal Credentials
# These are used for automated job applications
# LinkedIn credentials
LINKEDIN_EMAIL=your_email@example.com
LINKEDIN_PASSWORD=your_password
# Indeed credentials
INDEED_EMAIL=your_email@example.com
INDEED_PASSWORD=your_password
# Naukri credentials
NAUKRI_EMAIL=your_email@example.com
NAUKRI_PASSWORD=your_password

# Application Settings
# Maximum number of applications to submit per day
MAX_APPLICATIONS_PER_DAY=5
# Whether to automatically apply to jobs (true/false)
AUTO_APPLY_ENABLED=false
# Whether to require manual approval before applying (true/false)
MANUAL_APPROVAL_REQUIRED=true

# Job Search Settings
# Default job search locations
JOB_SEARCH_LOCATIONS=Remote,San Francisco,New York
# Default job titles to search for
JOB_SEARCH_TITLES=Software Engineer,Data Scientist,Machine Learning Engineer
# Default skills to highlight
JOB_SEARCH_SKILLS=Python,JavaScript,Machine Learning,AWS,SQL

# Dashboard Configuration
# Host for the Streamlit dashboard
DASHBOARD_HOST=localhost
# Port for the Streamlit dashboard
DASHBOARD_PORT=8501

# Logging Configuration
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
# Log file path
LOG_FILE=logs/application.log

# Schedule Settings
# Whether to enable scheduled job searches
SCHEDULE_ENABLED=false
# Time to run scheduled job searches (HH:MM format, 24-hour)
SCHEDULE_TIME=08:00
# Days to run scheduled job searches (comma-separated, e.g., Monday,Wednesday,Friday)
SCHEDULE_DAYS=Monday,Wednesday,Friday
